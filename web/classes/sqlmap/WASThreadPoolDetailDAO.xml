<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eproe.monitor.was.dao.WASThreadPoolDetailDAO">
	<resultMap id="result" type="WASThreadPoolDetail">
		<result property="id" column="id" javaType="Integer"/>
		<result property="creator" column="creator" javaType="String"/>
		<result property="modifier" column="modifier" javaType="String"/>
		<result property="createTime" column="create_time" javaType="Date"/>
		<result property="updatedTime" column="updated_time" javaType="Date"/>
		<result property="isDeleted" column="is_deleted" javaType="String"/>
		<result property="taskName" column="was_server_id" javaType="Integer"/>
		<result property="taskDesc" column="active_thread_count" javaType="Integer"/>
	</resultMap>

	<!--<select id="countAll" resultType="int">
		select count(1)
		from sp_task
		where is_deleted = 'n'
	</select>

	<select id="getWASThreadPoolDetailByPeriod" resultType="WASThreadPoolDetail" parameterType="Map">
		<![CDATA[
		select id,creator,modifier,create_time,updated_time,is_deleted,active_thread_Count,was_server_id 
		  from was_thread_pool_detail 
		 where is_deleted = 'n' 
		   and create_time >=  #{startTime} 
		   and create_time <=  #{endTime}
		 ]]>
	</select>
	
	<insert id="insertWASThreadPoolDetail" useGeneratedKeys="true" keyProperty="id" parameterType="WASThreadPoolDetail">
		insert into was_thread_pool_detail (creator, modifier, create_time, updated_time, is_deleted, was_server_id, active_thread_count)
		values(#{creator}, #{modifier}, #{createTime}, #{updatedTime}, #{isDeleted}, #{wasServerId}, #{activeThreadCount})
	</insert>
	
	<select id="getThreadPoolDetailByDay" resultType="WASThreadPoolDetail" parameterType="Map">
		<![CDATA[
		select id,creator,modifier,create_time,updated_time,is_deleted,was_server_id,active_thread_count
		  from was_thread_pool_detail 
		 where is_deleted = 'n' 
		   and was_server_id = #{wasServerId}
		   and create_time >=  (now() - INTERVAL #{interval} HOUR)  
		 
		 ]]>
	</select>
	<select id="getThreadPoolDetailByWeek" resultType="WASThreadPoolDetail" parameterType="Map">
		<![CDATA[
		select id,creator,modifier,create_time,updated_time,is_deleted,was_server_id,active_thread_count
		  from was_thread_pool_detail 
		 where is_deleted = 'n' 
		   and was_server_id = #{wasServerId}
		   and create_time >=  (CURDATE() - INTERVAL #{interval} DAY)  
		 
		 ]]>
	</select>
	<select id="getThreadPoolDetailByMonth" resultType="WASThreadPoolDetail" parameterType="Map">
		<![CDATA[
		select id,creator,modifier,create_time,updated_time,is_deleted,was_server_id,active_thread_count
		  from was_thread_pool_detail 
		 where is_deleted = 'n' 
		   and was_server_id = #{wasServerId}
		   and create_time >=  (CURDATE() - INTERVAL #{interval} DAY)  
		
		 ]]>
	</select>

--></mapper>